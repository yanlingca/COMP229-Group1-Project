<div class="container">
    <div class="form_container">
        <form action="/users/login" method="POST" autocomplete="off">
            <h1 class="text-center text-muted">Login</h1>
            <hr>
            <div class="input-group form-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email address" required
                    autofocus>
            </div>
            <div class="input-group form-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                    required>
            </div>
            <div class="row">
                <p class="text-center text-danger promptMessage">
                    <%= login_message %>
                </p>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 form-group">
                <input type="submit" class="btn btn-1g btn-success btn-block" value="Login">
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 form-group">
                <a href="../" class="btn btn-1g btn-primary btn-block">Cancel</a>
            </div>
            <div class="form-group">
                <div class="col-md12 control">
                    <span class="text-muted">Don't have an account?</span>
                    <a href="/users/registration">Register Here</a>
                </div>
            </div>
        </form>
    </div>
</div>