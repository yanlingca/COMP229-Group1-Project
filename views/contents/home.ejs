        <h4>Lost & Found Log</h4>
        <button type="button" class="btn btn-primary btn-sm" onclick="location.href='./add'">Add</button>
        <div class="table-responsive">  
            <table id="mytable" class="table table-bordred table-striped">
                 <thead>
                    <th>Date</th>
                    <th>Log Number</th>
                    <th>Item Description</th>
                    <th>Turned In By</th>
                    <th>Claimed By</th>
