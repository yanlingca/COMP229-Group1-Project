                            <td><%= logs[i].Phone%></td>
                            <td><%= logs[i].ReleasedBy%></td>
                            <% if(logs[i].DateReleased==null){ %>
                                <td></td>
                              <% } else{ %>  
                                <td><%= logs[i].DateReleased.getFullYear()%>-<%= logs[i].DateReleased.getMonth()+1%>-<%= logs[i].DateReleased.getDate()%></td>
                             <% } %>
                            <td><p data-placement="top" data-toggle="tooltip" title="Edit">
                                <a href="/update/<%= logs[i]._id %>" class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" >
                                    <span class="glyphicon glyphicon-pencil"></span></button></p></td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Delete">
                                <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" >
