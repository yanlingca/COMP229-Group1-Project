
<div class="container">
	<div class="row">
        <div class="col-md-12">
        <center><h3>Lost & Found Log</h3></center>
        <button type="button" class="btn btn-primary btn-sm" id="add-button" onclick="location.href='./add'">Add Lost Item</button>
        <div class="table-responsive">  
            <table id="mytable" class="table table-bordred table-striped">
                 <thead>
                    <th>Date</th>
                    <th>Log Number</th>
                    <th>Item Description</th>
                    <th>Turned In By</th>
                    <th>Claimed By</th>
                    <th>Phone</th>
                    <th>Released By</th>
                    <th>Datetime Released</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </thead>
                <tbody>
                    <% for(let i=0;i<logs.length;i++) {%>
                        <tr>
                            <td><%= logs[i].CreatedDate.getFullYear()%>-<%= logs[i].CreatedDate.getMonth()+1%>-<%= logs[i].CreatedDate.getDate()%></td>
                            <td><%= logs[i].LogNo%></td>
                            <td><%= logs[i].ItemDesc%></td>
                            <td><%= logs[i].TurnedInBy%></td>
                            <td><%= logs[i].ClaimedBy%></td>
                            <td><%= logs[i].Phone%></td>
                            <td><%= logs[i].ReleasedBy%></td>
                            <% if(logs[i].DateReleased==null){ %>
                                <td></td>
                              <% } else{ %>  
                                <td><%= logs[i].DateReleased.getFullYear()%>-<%= logs[i].DateReleased.getMonth()+1%>-<%= logs[i].DateReleased.getDate()%></td>
                             <% } %>
                            <td><p data-placement="top" data-toggle="tooltip" title="Edit">
                              <% if (loggedIn) { %>
                                <a href="/update/<%= logs[i]._id %>" class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" >
                                    <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    <% } else { %>
                                      <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" disabled>
                                        <span class="glyphicon glyphicon-pencil"></span>                                
                                  </button>
                                  <% } %>
                                </p></td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Delete">
                              <% if (loggedIn) { %>
                                <button class="btn btn-danger btn-xs" data-title="Delete" onclick="deleteLog('<%= logs[i]._id %>')">
                                    <span class="glyphicon glyphicon-trash"></span></button>
                                    <% } else { %>
                                      <button class="btn btn-danger btn-xs" data-title="Delete" disabled>
                                        <span class="glyphicon glyphicon-trash"></span>
                                      </button>
                                      <% } %>
                                  </p></td>
                        </tr>
                    <% }%>

